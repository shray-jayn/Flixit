generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model List {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  /// Could not determine type: the field only had null or empty values in the sample set.
  content   Json?
  createdAt DateTime @db.Date
  genre     String
  title     String
  type      String
  updatedAt DateTime @db.Date
}

model Movie {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   DateTime @db.Date
  description String
  genre       String
  isSeries    Boolean
  limit       String
  poster      String
  thumbnail   String
  title       String
  trailer     String
  updatedAt   DateTime @db.Date
  video       String
  year        String
}

model User {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt  DateTime @db.Date
  email      String
  isAdmin    Boolean
  password   String
  profilePic String
  updatedAt  DateTime @db.Date
  username   String
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  username  String   
  password  String
  profilePic String? @default("")
  isAdmin   Boolean  @default(false) 
}

model Movie {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  description String?
  poster      String?
  thumbnail   String?
  title       String  @unique 
  trailer     String?
  video       String?
  year        String?
  limit       String?
  genre       String?
  isSeries    Boolean @default(false) 
}

model List {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  title   String   @unique
  type    String?
  genre   String?
  content String[] 
}
